{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Supprimer un questionnaire</h1>

    <p>
        Etes-vous certain de vouloir supprimer le questionnaire "{{ survey.name }}" ?
    </p>

    <form action="{{ path('eag_survey_delete', {'id': survey.id}) }}" method="post">
        <a href="{{ path('eag_survey_show', {'id': survey.id}) }}" class="btn btn-default">
            <i></i>
            Retour au questionnaire
        </a>
        <input type="submit" value="Supprimer" />
        {{ form_rest(form) }}
    </form>


{% endblock %}